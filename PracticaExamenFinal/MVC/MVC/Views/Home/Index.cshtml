@model IEnumerable<MVC.Models.Survey>
@using MVC.Models
@{
	ViewBag.Title = "Survey System";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="page-header text-center">
	<h1>Survey List</h1>
</div>
@Html.ActionLink("Add a new survey", "New", "Home")
<br />

@if (Model.Count() == 0)
{
	<h1 class="text-center">You don't have any surveys yet!</h1>
}
else
{
	<hr />
	<div class="container">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Id</th>
					<th>Name</th>
					<th>Description</th>
					<th>IsActive</th>
					<th>Status</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var survey in Model)
				{
				<tr>
					<td>@survey.Id</td>
					<td>@Html.ActionLink(survey.Title, "Details", "Home", new { id = survey.Id }, null)</td>
					<td>@survey.Description</td>
					<td>@survey.IsActive</td>
					<td>@survey.Status</td>
					<td>@Html.Partial("_PartialButtons", new Survey{ Id = survey.Id}, null)</td>
				</tr>
				}
			</tbody>
		</table>
	</div>
}
<br />